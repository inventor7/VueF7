{
  "name": "erpalio",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "erpalio",
  "repository": "",
  "license": "UNLICENSED",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "cross-env NODE_ENV=production run-p type-check \"build-only {@}\" --",
    "build-capacitor-ios": "cross-env NODE_ENV=production vite build && npx cap copy ios",
    "build-capacitor-android": "cross-env NODE_ENV=production vite build && npx cap copy android",
    "postinstall": "cpy --flat ./node_modules/framework7-icons/fonts/*.* ./src/fonts/ && cpy --flat ./node_modules/material-icons/iconfont/*.* ./src/fonts/",
    "preview": "vite preview --port 4173",
    "build-only": "vite build",
    "ios": "vite build && npx cap copy ios",
    "ios-open": "vite build && npx cap copy ios && npx cap open ios",
    "android": "vite build && npx cap copy android",
    "android-open": "vite build && npx cap copy android && npx cap open android",
    "type-check": "vue-tsc --noEmit"
  },
  "browserslist": [
    "IOS >= 15",
    "Safari >= 15",
    "last 5 Chrome versions",
    "last 5 Firefox versions"
  ],
  "dependencies": {
    "@capacitor-community/sqlite": "^7.0.2",
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.1.0",
    "@capacitor/browser": "^7.0.2",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@iconify-json/material-symbols": "^1.2.40",
    "@tailwindcss/vite": "^4.1.13",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/core": "^13.9.0",
    "capacitor-sqlite-kysely": "^1.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dom7": "^4.0.6",
    "framework7": "^8.3.4",
    "framework7-icons": "^5.0.5",
    "framework7-vue": "^8.3.4",
    "jeep-sqlite": "^2.8.0",
    "kysely": "^0.28.8",
    "material-icons": "^1.13.14",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.7.1",
    "skeleton-elements": "^4.0.1",
    "sql.js": "^1.13.0",
    "swiper": "^12.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^29.1.0",
    "vue": "^3.5.22",
    "vue-i18n": "^11.1.12"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@iconify-json/f7": "^1.2.2",
    "@intlify/unplugin-vue-i18n": "^11.0.1",
    "@swc/cli": "^0.7.8",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/compiler-sfc": "^3.5.22",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.0.0",
    "less": "^4.4.1",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^10.4.0",
    "typescript": "^5.9.2",
    "unplugin-imagemin": "^0.6.9",
    "unplugin-swc": "^1.5.7",
    "unplugin-turbo-console": "^2.2.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vue-tsc": "^3.0.8"
  }
}
